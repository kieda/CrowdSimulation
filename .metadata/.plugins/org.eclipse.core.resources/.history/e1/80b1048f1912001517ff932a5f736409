package edu.cmu.cs464.p3.modulelang.ast

/**
 * @author zkieda
 */
class JavaRef(List[String]) {
  
}
package edu.cmu.cs464.p3.modulelang.ast;

import java.util.List;
import java.util.stream.Collectors;

/**
 * @author zkieda
 */
public class JavaRef {
    private String ref;
    private List<String> path;
    public JavaRef(List<String> path) {
        this.path = path;
        this.ref = path.stream().collect(Collectors.joining("."));
    }

    public List<String> getPath() {
        return path;
    }

    public String getRef() {
        return ref;
    }

    @Override
    public String toString() {
        return getRef();
    }
}
